div.item.btn{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 99;
  top: 0;
  left: 0;
  opacity: 0;
}
div.item::before {
  content: "";
  width: 60px;
  height: 60px;
  background-image: url("../_imgs/plus-solid.svg");
  border-radius: 50%;
  background-color: #00D57A;
  background-repeat: no-repeat;
  -webkit-background-size: contain;
  background-size: contain;
  background-position: center;
  color: #E6E6E3;
  border: 12.5px solid #E6E6E3;
  z-index: -1;
  position: absolute;
  bottom: -12.5px;
  right: -12.5px;
  transition: all .2s ease-out;

}

div.item:hover::before {
  cursor: pointer;
  transform: scale(1.2);
}
div.item:active::before {
  width: 100%;
  height: 100%;
  transform: none;
  border-radius:25px; 


